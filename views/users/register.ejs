<% layout('/layout/boilerplate.ejs') %> <%-
include('../partials/flashError.ejs')%>

<style>
  img {
    height: 300px;
  }
</style>

<div class="container justify-content-center align-items-center mt-2 mb-2">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img src="/images/registerImage.jpg" alt="" />
        <div class="card-body">
          <h5 class="card-title">Register</h5>
          <form
            action="/register"
            method="post"
            class="validate-from"
            novalidate
          >
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
                autofocus
              />
              <div class="invalid-feedback">Valid input please.</div>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Email</label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                required
              />
              <div class="invalid-feedback">Valid input please.</div>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="invalid-feedback">Valid input please.</div>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <button class="btn btn-success">Register</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
