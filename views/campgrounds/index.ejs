<% layout('/layout/boilerplate.ejs') %> <%-
include('../partials/flashSuccess.ejs')%> <%-
include('../partials/flashError.ejs')%>

<div id="map" class="mb-3 cluster-map"></div>
<h1>All Campgrounds</h1>

<% for (let campground of campgrounds){ %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(campground.imageUrl.length > 0){ %>
      <img
        class="img-fluid"
        src="<%= campground.imageUrl[0].url %> "
        alt="Camps Image"
      />
      <% } else { %>
      <img
        class="img-fluid"
        src="
      https://www.google.com/imgres?imgurl=https%3A%2F%2Facadianakarate.com%2Fwp-content%2Fuploads%2F2017%2F04%2Fdefault-image.jpg&imgrefurl=https%3A%2F%2Facadianakarate.com%2Fhome%2Fdefault-image%2F&tbnid=NfE8TAjA2ODYnM&vet=12ahUKEwj4u43eu774AhUjktgFHVIPCnkQMygAegUIARDbAQ..i&docid=26W_wkibIY4McM&w=800&h=600&q=default%20image&ved=2ahUKEwj4u43eu774AhUjktgFHVIPCnkQMygAegUIARDbAQ
      "
        alt="Camps Image"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= campground.location %> </small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>"
          >View <%= campground.title %></a
        >
      </div>
    </div>
  </div>
</div>

<% }%>

<span><a href="/campgrounds/new">Add new campground</a></span>

<br />
<br />

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds = {features : <%- JSON.stringify(campgrounds) %> }
</script>

<script src="/javascripts/clusterMap.js"></script>
